<div id="createNewProjectModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createNewProjectModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title topevents" id="createNewProjectModalLabel">Create New Project <i
						class="fa fa-sticky-note" aria-hidden="true"></i></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-12">
						<form name="addProjectForm">
							<label>
								<h5>Name:</h5>
							</label>
							<input type="text" name="projectName" class="form-control" id="projectName" />
							<br>
							<label>
								<h5>Description:</h5>
							</label>
							<input type="text" name="projectDescription_text" class="form-control" id="projectDescription_text" />
							<br>
						</form>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<span id="addProjectModalStatus"></span>
				<button type="button" class="btn btn-success" id="addProjectModalButton"><i class="fa fa-plus"></i>
					Add Project</button>
				<button type="button" class="btn btn-success" id="closeProjectModalButton"><i class="fa fa-times"
						aria-hidden="true"></i> Close</button>
			</div>
		</div>
	</div>
</div>